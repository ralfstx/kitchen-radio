{
  "name": "kitchen-radio",
  "version": "0.1.0",
  "dependencies": {
    "body-parser": "^1.15.2",
    "crc-32": "^1.0.1",
    "diacritics": "^1.3.0",
    "express": "^4.14.0",
    "fs-extra": "^3.0.0",
    "imagemagick": "^0.1.3",
    "morgan": "^1.7.0",
    "mpd": "^1.3.0",
    "musicmetadata": "^2.0.5",
    "node-fetch": "^1.6.0",
    "source-map-support": "^0.4.2",
    "websocket": "^1.0.24",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.14.0",
    "chai": "^3.5.0",
    "eslint": "^3.4.0",
    "mocha": "^3.0.2",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "tmp": "0.0.31"
  },
  "scripts": {
    "lint": "eslint .",
    "mocha": "mocha --compilers js:babel-core/register",
    "test": "npm run mocha -- 'test/**/*.test.js'",
    "posttest": "npm run lint",
    "build": "rm -rf build/ && mkdir build/ && babel --compact false -d build/ src/ && cp -r src/static src/views src/config.json package.json build/",
    "server": "node build/main.js",
    "start": "npm run build && npm run server",
    "deploy": "rsync -rv --delete --exclude 'config.json' --exclude 'node_modules/' build/ pi@radio:/var/lib/node/"
  }
}
