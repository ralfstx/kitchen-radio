{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "rootDirs": [
      "src",
      "test"
    ],
    "outDir": "out",
    "module": "commonjs",
    "strict": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ]
}
