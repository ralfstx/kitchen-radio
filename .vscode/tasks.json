{
  "version": "0.1.0",
  "command": "node",
  "runner": "terminal",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "test (file)",
      "command": "${workspaceRoot}/node_modules/.bin/mocha",
      "args": ["--colors", "--compilers", "js:babel-core/register", "--", "${file}"],
      "isTestCommand": true
    }
  ]
}
