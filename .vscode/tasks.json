{
  "version": "0.1.0",
  "command": "node",
  "runner": "terminal",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "test",
      "command": "${workspaceRoot}/node_modules/.bin/mocha",
      "args": ["--colors", "-r", "ts-node/register", "'test/**/**.test.ts'"],
      "isTestCommand": true
    },
    {
      "taskName": "test (file)",
      "command": "${workspaceRoot}/node_modules/.bin/mocha",
      "args": ["--colors", "-r", "ts-node/register", "${file}"],
      "isTestCommand": true
    }
  ]
}
